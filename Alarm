using UnityEngine;
using System.Collections;

public class Alarm : MonoBehaviour
{
    [SerializeField] private float _minVolume = 0;
    [SerializeField] private float _maxVolume = 1.0f;
    [SerializeField] private float _fadeSpeed = 0.01f;
    [SerializeField] private AudioSource _audioSource;
    [SerializeField] private TrigeprPlayer _trigeprPlayer;

    private void OnEnable()
    {
        _trigeprPlayer.OnTrigger += TrigeprPlayer_OnTrigger;
    }

    private void OnDisable()
    {
        _trigeprPlayer.OnTrigger -= TrigeprPlayer_OnTrigger;
    }

    private void TrigeprPlayer_OnTrigger()
    {
        //  я плачу. если это не верно обьесните как правельно
        StartCoroutine(FadeVolume());
    }

    IEnumerator FadeVolume()
    {
        WaitForSeconds wait = new(0.6f);
        
        while (gameObject.activeSelf)
        {
            _audioSource.volume = Mathf.MoveTowards(_audioSource.volume, _trigeprPlayer.IsTriggered() ? _maxVolume : _minVolume, _fadeSpeed * Time.deltaTime);

            yield return wait;
        }
    }
}
